		"build": "webpack",
		"webpack:watch": "npx webpack --watch",
		"watch:sass": "node-sass src/sass/main.scss css/style.css -w",
		"compile:sass": "node-sass sass/main.scss css/style.comp.css",
		"prefix:css": "postcss css/style.concat.css --use autoprefixer  -o css/style.prefix.css",
		"compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
		"build:css": "npm-run-all compile:sass concat:sass prefix:css compress:css",
		"start": "npm-run-all --parallel webpack:watch watch:sass"
	},
